# DataMetronome Environment Configuration
# Copy this file to .env and update the values

# Core Configuration
DATAMETRONOME_DEBUG=true
DATAMETRONOME_LOG_LEVEL=INFO

# Server Configuration
DATAMETRONOME_HOST=0.0.0.0
DATAMETRONOME_PORT=8000

# Security (REQUIRED - Change this in production!)
DATAMETRONOME_SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
# SQLite (default)
DATAMETRONOME_DATABASE_URL=sqlite:///./datametronome.db

# PostgreSQL (alternative)
# DATAMETRONOME_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/datametronome

# Authentication
DATAMETRONOME_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
DATAMETRONOME_ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# Scheduler Configuration
DATAMETRONOME_SCHEDULER_ENABLED=true
DATAMETRONOME_SCHEDULER_TIMEZONE=UTC

# Job Queue Configuration
DATAMETRONOME_JOB_QUEUE_SIZE=1000
DATAMETRONOME_WORKER_POOL_SIZE=4

# Metrics Configuration
DATAMETRONOME_METRICS_ENABLED=true
DATAMETRONOME_METRICS_RETENTION_DAYS=90

# UI Configuration
DATAMETRONOME_BACKEND_URL=http://localhost:8000
DATAMETRONOME_UI_TITLE=DataMetronome
DATAMETRONOME_UI_THEME=light
